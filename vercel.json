{
  "version": 2,
  "buildCommand": "bash build_files.sh",
  "builds": [
    {
      "src": "jossie_fancies/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/css/output.css",
      "dest": "/staticfiles/css/output.css",
      "headers": {
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/staticfiles/images/favicon.ico"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "jossie_fancies/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "jossie_fancies.settings",
    "ALLOWED_HOSTS": ".vercel.app,*.vercel.app,jossie-fancies.vercel.app"
  }
}